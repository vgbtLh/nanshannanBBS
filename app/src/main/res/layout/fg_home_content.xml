<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:id="@+id/home_content_item">


    <TextView
        android:id="@+id/home_content_title"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="标题"
        android:textColor="#1d1d1c"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/home_content_says"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/home_content_photo"
        android:layout_marginBottom="0dp"
        android:paddingLeft="10dp"
        android:text="发布人"
        android:textColor="#b4b4b9"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/home_cotent_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/home_content_photo"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@id/home_content_photo"
        android:drawableLeft="@drawable/ic_action_comment"
        android:drawablePadding="6dp"
        android:text="阅读"
        android:textColor="#b4b4b9"
        android:textSize="10sp"/>



    <ImageView
        android:id="@+id/home_content_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>


</RelativeLayout>