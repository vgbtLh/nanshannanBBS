<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">


    <RelativeLayout
        android:id="@+id/layout_mine_top"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@mipmap/mine_bg"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="190dp">


        <TextView
            android:id="@+id/mine_txt_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="18dp"
            android:text="设置"
            android:textSize="22sp"
            android:textColor="@color/div_white"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="84dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/mine_photo_log"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20sp"
                android:layout_weight="0"
                app:srcCompat="@mipmap/mine_photo" />

            <TextView
                android:id="@+id/mine_txt_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请登录/注册"
                android:textSize="28sp"
                android:layout_gravity="center"
                android:textColor="@color/div_white"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="关注"
                android:textColor="@color/div_white"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="粉丝"
                android:textColor="@color/div_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="帖子"
                android:textColor="@color/div_white"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="财富"
                android:textColor="@color/div_white"
                android:layout_weight="1"
                android:gravity="center" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view_mine_1"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="@color/div_white"
        android:layout_below="@id/layout_mine_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="674dp"
        android:layout_above="@+id/ly_tab_bar"
        android:layout_below="@id/view_mine_1"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="我的发布"
                android:textColor="@color/text_top"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="查看全部发布"
                android:textColor="@color/text_top"
                android:textSize="16sp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div_white" />
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mine_shenghezhong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/tiezi"
                android:text="审核中"
                style="@style/mine_tiezi_style"/>

            <TextView
                android:id="@+id/mine_yifabu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="已发布"
                android:drawableTop="@mipmap/achieve"
                style="@style/mine_tiezi_style"/>

            <TextView
                android:id="@+id/mine_yishouhui"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="已收回"
                android:drawableTop="@mipmap/refuse"
                style="@style/mine_tiezi_style"/>

            <TextView
                android:id="@+id/mine_caogaoxiang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="草稿箱"
                android:drawableTop="@mipmap/caogao"
                style="@style/mine_tiezi_style"/>

        </LinearLayout>

        <View
            android:id="@+id/middle_line"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/div_white"/>

        <TextView
            android:id="@+id/mine_mymessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/remind"
            android:text="我的消息"
            style="@style/mine_menu_style" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div_white" />


        <TextView
            android:id="@+id/mine_mytiezi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/tiezi"
            android:text="我的帖子"
            style="@style/mine_menu_style" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div_white" />

        <TextView
            android:id="@+id/mine_mycollect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/collect"
            android:text="我的收藏"
            style="@style/mine_menu_style"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div_white" />

        <TextView
            android:id="@+id/mine_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/history"
            android:text="浏览历史"
            style="@style/mine_menu_style"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div_white" />


        <TextView
            android:id="@+id/mine_aboutus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/about"
            android:text="关于我们"
            style="@style/mine_menu_style"/>
    </LinearLayout>

</RelativeLayout>