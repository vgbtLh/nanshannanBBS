<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@color/bg_white"
    android:id="@+id/luntan_content_item">

    <ImageView
        android:id="@+id/luntan_user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/mine_photo"/>

    <TextView
        android:id="@+id/luntan_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/luntan_user_photo"
        android:paddingTop="3dp"
        android:layout_toRightOf="@id/luntan_user_photo"
        android:paddingLeft="7dp"
        android:text="你好"
        android:textColor="@color/text_top">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/luntan_user_id"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/luntan_user_photo"
        android:paddingLeft="7dp"
        android:text="一个小时前"
        android:textColor="@color/text_top"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/luntan_read_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/luntan_comment_number"
        android:paddingRight="12dp"
        android:drawableLeft="@drawable/ic_action_read"
        android:drawablePadding="6dp"
        android:text="浏览量"
        android:textColor="@color/text_top"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/luntan_comment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_action_comment"
        android:drawablePadding="6dp"
        android:text="评论量"
        android:textColor="@color/text_top"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/luntan_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/luntan_user_photo"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:text="为什么"
        android:textColor="#000"
        android:textSize="17sp"/>

</RelativeLayout>